{
  "name": "black-lamp/yii2-email-templates",
  "description": "Module for adding templates for email letters across dashboard",
  "keywords": ["yii2", "module", "email", "template", "delivery"],
  "type": "yii2-extension",
  "license": "BSD-3-Clause",
  "support": {
    "source": "https://github.com/black-lamp/yii2-email-templates",
    "issues": "https://github.com/black-lamp/yii2-email-templates/issues"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "yiisoft/yii2": "^2.0.4",
    "yiisoft/yii2-bootstrap": "^2.0.0",
    "2amigos/yii2-tinymce-widget" : "~1.1"
  },
  "require-dev": {
    "codeception/codeception": "*",
    "codeception/verify": "*",
    "codeception/specify": "*"
  },
  "authors": [
    {
      "name": "Vladimir Kuprienko",
      "email": "vldmr.kuprienko@gmail.com",
      "role": "lead"
    }
  ],
  "autoload": {
    "psr-4": {
      "bl\\emailTemplates\\": "src"
    }
  }
}
